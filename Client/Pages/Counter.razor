@page "/counter"

@inject HttpClient Http

<h1>Story</h1>

@if (story == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var sentence in story)
    {
        <p>@sentence</p>
    }
}

@code {
    private string[] story;

    protected override async Task OnInitializedAsync()
    {
        story = await Http.GetFromJsonAsync<string[]>("Story");
    }
}